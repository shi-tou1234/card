/* 全局样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

/* 主题色 */
.primary-color {
  color: #e74c3c;
}

.primary-bg {
  background-color: #e74c3c;
}

/* 容器 */
.container {
  padding: 30rpx;
  box-sizing: border-box;
}

/* 按钮样式 */
.btn-primary {
  background-color: #e74c3c;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.btn-primary:active {
  background-color: #c0392b;
}

.btn-secondary {
  background-color: #fff;
  color: #e74c3c;
  border: 2rpx solid #e74c3c;
  border-radius: 12rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.btn-secondary:active {
  background-color: #fef0ef;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #eee;
}

/* 表单样式 */
.form-group {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.form-label.required::before {
  content: '*';
  color: #e74c3c;
  margin-right: 6rpx;
}

.form-input {
  width: 100%;
  padding: 20rpx 24rpx;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  color: #333 !important;
}

.form-input:focus {
  border-color: #e74c3c;
}

.form-picker {
  width: 100%;
  padding: 20rpx 24rpx;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  color: #333;
}

.form-textarea {
  width: 100%;
  padding: 20rpx 24rpx;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
  font-size: 30rpx;
  min-height: 120rpx;
  box-sizing: border-box;
  background-color: #fff;
  color: #333 !important;
}

/* 适老化字体 */
.text-lg {
  font-size: 36rpx;
}

.text-xl {
  font-size: 42rpx;
}

.text-xxl {
  font-size: 48rpx;
}

/* 安全间距 */
.safe-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
