/* pages/form/form.wxss */
.container {
  padding: 20rpx 24rpx;
  padding-bottom: 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
}

.card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.card-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.title-icon {
  margin-right: 12rpx;
  font-size: 36rpx;
}

.required-badge {
  margin-left: auto;
  background-color: #fff0f0;
  color: #e74c3c;
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

.form-group {
  margin-bottom: 24rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-row {
  display: flex;
  gap: 20rpx;
}

.form-group.half {
  flex: 1;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.form-label.required::before {
  content: '*';
  color: #e74c3c;
  margin-right: 6rpx;
}

.form-input {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  background-color: #fafafa;
  transition: all 0.2s;
  color: #333 !important;
  min-height: 80rpx;
}

.form-input:focus {
  border-color: #e74c3c;
  background-color: #fff;
}

.form-input-placeholder {
  color: #999;
}

.form-picker {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  background-color: #fafafa;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #333;
}

.picker-arrow {
  font-size: 20rpx;
  color: #999;
}

.form-textarea {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  font-size: 30rpx;
  min-height: 140rpx;
  box-sizing: border-box;
  background-color: #fafafa;
  color: #333 !important;
}

.form-textarea-placeholder {
  color: #999;
}

.form-textarea:focus {
  border-color: #e74c3c;
  background-color: #fff;
}

/* 按钮组 */
.button-group {
  margin-top: 40rpx;
  padding: 0 10rpx;
}

.btn-primary {
  width: 100%;
  background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
  color: #fff;
  border: none;
  border-radius: 16rpx;
  padding: 30rpx 0;
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(231, 76, 60, 0.3);
}

.btn-primary:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.btn-secondary {
  width: 100%;
  background-color: #fff;
  color: #666;
  border: 2rpx solid #ddd;
  border-radius: 16rpx;
  padding: 28rpx 0;
  font-size: 32rpx;
  font-weight: 500;
}

.btn-secondary:active {
  background-color: #f5f5f5;
}

.safe-bottom {
  height: 40rpx;
}
