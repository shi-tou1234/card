<!--pages/index/index.wxml-->
<view class="container">
  <!-- 顶部图标 -->
  <view class="header">
    <view class="logo-wrapper">
      <view class="logo-icon">
        <text class="icon-text">❤️</text>
      </view>
    </view>
    <view class="title">老年人应急信息卡</view>
    <view class="subtitle">扫一扫，就能帮助需要帮助的人</view>
  </view>

  <!-- 功能卡片 -->
  <view class="feature-cards">
    <!-- 创建卡片 -->
    <view class="feature-card" bindtap="goToForm">
      <view class="feature-icon create-icon">
        <text class="icon-emoji">📝</text>
      </view>
      <view class="feature-info">
        <view class="feature-title">创建应急卡</view>
        <view class="feature-desc">填写个人信息，生成专属二维码</view>
      </view>
      <view class="feature-arrow">›</view>
    </view>

    <!-- 查看我的卡片 -->
    <view class="feature-card {{!hasCard ? 'disabled' : ''}}" bindtap="goToPreview">
      <view class="feature-icon view-icon">
        <text class="icon-emoji">💳</text>
      </view>
      <view class="feature-info">
        <view class="feature-title">我的应急卡</view>
        <view class="feature-desc">{{hasCard ? '查看已保存的应急信息' : '暂未创建应急卡'}}</view>
      </view>
      <view class="feature-arrow">›</view>
    </view>

    <!-- 扫码查看 -->
    <view class="feature-card" bindtap="scanQRCode">
      <view class="feature-icon scan-icon">
        <text class="icon-emoji">📷</text>
      </view>
      <view class="feature-info">
        <view class="feature-title">扫码帮助他人</view>
        <view class="feature-desc">扫描二维码查看他人应急信息</view>
      </view>
      <view class="feature-arrow">›</view>
    </view>
  </view>

  <!-- 使用说明 -->
  <view class="tips-section">
    <view class="tips-title">💡 使用说明</view>
    <view class="tips-list">
      <view class="tip-item">
        <text class="tip-num">1</text>
        <text class="tip-text">填写老人的基本信息和紧急联系人</text>
      </view>
      <view class="tip-item">
        <text class="tip-num">2</text>
        <text class="tip-text">生成专属二维码并保存到相册</text>
      </view>
      <view class="tip-item">
        <text class="tip-num">3</text>
        <text class="tip-text">打印二维码放入钱包或制作成卡片</text>
      </view>
      <view class="tip-item">
        <text class="tip-num">4</text>
        <text class="tip-text">遇到紧急情况，扫码即可获取信息</text>
      </view>
    </view>
  </view>

  <!-- 隐私提示 -->
  <view class="privacy-notice">
    <text class="privacy-icon">🔒</text>
    <text class="privacy-text">您的信息仅保存在本地，不会上传到服务器</text>
  </view>
</view>
