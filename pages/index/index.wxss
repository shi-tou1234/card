/* pages/index/index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #e74c3c 0%, #c0392b 100%);
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

/* 头部 */
.header {
  text-align: center;
  padding: 40rpx 0 60rpx;
}

.logo-wrapper {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}

.logo-icon {
  width: 140rpx;
  height: 140rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-text {
  font-size: 70rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.85);
}

/* 功能卡片 */
.feature-cards {
  margin-bottom: 40rpx;
}

.feature-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 36rpx 30rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.feature-card.disabled {
  opacity: 0.6;
}

.feature-card:active {
  transform: scale(0.98);
}

.feature-icon {
  width: 90rpx;
  height: 90rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.create-icon {
  background-color: #fff3e0;
}

.view-icon {
  background-color: #e3f2fd;
}

.scan-icon {
  background-color: #e8f5e9;
}

.icon-emoji {
  font-size: 44rpx;
}

.feature-info {
  flex: 1;
}

.feature-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.feature-desc {
  font-size: 26rpx;
  color: #888;
}

.feature-arrow {
  font-size: 48rpx;
  color: #ccc;
  font-weight: 300;
}

/* 使用说明 */
.tips-section {
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.tips-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.tips-list {
  
}

.tip-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.tip-num {
  width: 44rpx;
  height: 44rpx;
  background-color: #e74c3c;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.tip-text {
  font-size: 28rpx;
  color: #555;
  line-height: 44rpx;
}

/* 隐私提示 */
.privacy-notice {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
}

.privacy-icon {
  margin-right: 10rpx;
}

.privacy-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}
